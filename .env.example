# CarZone Application Environment Configuration
# Copy this file to .env and update the values according to your environment

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================

# PostgreSQL Database Connection Settings
DB_HOST=localhost                    # Database host (localhost for local dev, postgres for Docker)
DB_PORT=5432                        # PostgreSQL port (default: 5432)
DB_USER=carzone_user               # Database username
DB_PASSWORD=your_secure_password   # Database password (change this!)
DB_NAME=carzone                    # Database name
DB_SSLMODE=disable                 # SSL mode (disable for local dev, require for production)

# Database Pool Configuration (optional)
DB_MAX_OPEN_CONNS=25              # Maximum open database connections
DB_MAX_IDLE_CONNS=10              # Maximum idle database connections
DB_CONN_MAX_LIFETIME=5m           # Maximum connection lifetime

# =============================================================================
# APPLICATION CONFIGURATION  
# =============================================================================

# Server Settings
PORT=8080                         # HTTP server port
GO_ENV=development               # Environment: development, production, testing

# Logging Configuration
LOG_LEVEL=info                   # Log level: debug, info, warn, error
LOG_FORMAT=json                  # Log format: json, text

# =============================================================================
# SECURITY CONFIGURATION
# =============================================================================

# JWT/Authentication (for future implementation)
# JWT_SECRET=your-super-secret-jwt-key
# JWT_EXPIRY=24h

# API Rate Limiting (for future implementation)  
# RATE_LIMIT_REQUESTS=100
# RATE_LIMIT_WINDOW=1h

# CORS Configuration (for future implementation)
# CORS_ALLOWED_ORIGINS=http://localhost:3000,https://yourdomain.com
# CORS_ALLOWED_METHODS=GET,POST,PUT,DELETE,OPTIONS
# CORS_ALLOWED_HEADERS=Content-Type,Authorization

# =============================================================================
# AWS S3 CONFIGURATION
# =============================================================================

# AWS S3 Settings for Image Upload
AWS_ACCESS_KEY_ID=your_aws_access_key_id
AWS_SECRET_ACCESS_KEY=your_aws_secret_access_key
AWS_REGION=us-east-1
AWS_S3_BUCKET_NAME=carzone-images

# S3 Configuration
S3_PUBLIC_READ=true              # Make uploaded images publicly readable
S3_MAX_FILE_SIZE=5MB            # Maximum file size for uploads
S3_ALLOWED_EXTENSIONS=jpg,jpeg,png,gif  # Allowed image extensions

# =============================================================================
# EXTERNAL SERVICES (for future integrations)
# =============================================================================

# Redis Configuration (for caching)
# REDIS_HOST=localhost
# REDIS_PORT=6379
# REDIS_PASSWORD=
# REDIS_DB=0

# Email Service Configuration (for notifications)
# EMAIL_SMTP_HOST=smtp.gmail.com
# EMAIL_SMTP_PORT=587
# EMAIL_USERNAME=your-email@example.com
# EMAIL_PASSWORD=your-app-password

# AWS/Cloud Configuration (for file storage)
# AWS_REGION=us-east-1
# AWS_ACCESS_KEY_ID=your-access-key
# AWS_SECRET_ACCESS_KEY=your-secret-key
# S3_BUCKET_NAME=carzone-uploads

# =============================================================================
# MONITORING AND OBSERVABILITY
# =============================================================================

# Application Performance Monitoring
# APM_SERVICE_NAME=carzone-api
# APM_ENVIRONMENT=development
# APM_VERSION=1.0.0

# Metrics and Health Checks
# METRICS_ENABLED=true
# HEALTH_CHECK_ENDPOINT=/health
# METRICS_ENDPOINT=/metrics

# =============================================================================
# DEVELOPMENT TOOLS
# =============================================================================

# Hot Reload (for development)
# HOT_RELOAD_ENABLED=true
# WATCH_DIRECTORIES=.

# Debug Configuration
# DEBUG_ENABLED=false
# PPROF_ENABLED=false
# PPROF_PORT=6060

# =============================================================================
# NOTES
# =============================================================================

# 1. Never commit the actual .env file to version control
# 2. Use strong, unique passwords for production environments
# 3. Enable SSL/TLS in production environments
# 4. Regularly rotate secrets and passwords
# 5. Use environment-specific configuration files for different stages
# 6. Consider using a secrets management service for production

# For Docker Compose, some of these variables are overridden in docker-compose.yml
# For Kubernetes deployment, use ConfigMaps and Secrets instead of .env files
